# =============================================================================
# üçé GACP Production Environment Template
# Apple-Standard Configuration
# =============================================================================
# IMPORTANT: Copy this to .env.production and set chmod 600
# For AWS: Use Secrets Manager for sensitive values
# =============================================================================

# Environment
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE (PostgreSQL via Prisma)
# =============================================================================
DATABASE_URL=postgresql://gacp_user:YOUR_SECURE_PASSWORD@localhost:5432/gacp_production

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# AUTHENTICATION (CRITICAL - Generate secure values!)
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS_VALUE

# Token expiration
JWT_EXPIRES_IN=7d

# =============================================================================
# ENCRYPTION (CRITICAL - Generate secure value!)
# =============================================================================
# Must be exactly 32 characters for AES-256
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=GENERATE_32_CHAR_KEY_NOT_THIS

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://47.129.167.71,https://gacp.dtam.go.th

# =============================================================================
# BACKEND URL (for frontend API calls)
# =============================================================================
BACKEND_URL=http://localhost:3000

