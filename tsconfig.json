{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/frontend/src/*"
      ],
      "@/app/*": [
        "app/frontend/src/app/*"
      ],
      "@/components/*": [
        "app/frontend/src/components/*"
      ],
      "@/contexts/*": [
        "app/frontend/src/contexts/*"
      ],
      "@/hooks/*": [
        "app/frontend/src/hooks/*"
      ],
      "@/lib/*": [
        "app/frontend/src/lib/*"
      ],
      "@/types/*": [
        "app/frontend/src/types/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "apps/frontend",
    "apps/admin-portal",
    "apps/certificate-portal",
    "frontend-nextjs",
    "archive",
    "docs",
    "scripts",
    "tests",
    "test",
    "__tests__",
    "load-tests",
    "business-logic",
    "config",
    "database",
    "examples",
    "infrastructure",
    "k8s",
    "middleware",
    "monitoring",
    "nginx",
    "openapi",
    "packages",
    "terraform",
    "test-data",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
