# =====================================================
# GACP Platform - Development Environment Configuration
# =====================================================
# Copy this file to .env.local for your local overrides
# DO NOT commit .env.local to git

# -----------------------------------------------------
# SERVER PORTS
# -----------------------------------------------------
# Backend Express server port
BACKEND_PORT=5000

# Frontend Next.js port
FRONTEND_PORT=3000

# -----------------------------------------------------
# DATABASE - MongoDB Atlas
# -----------------------------------------------------
MONGODB_URI=mongodb+srv://gacp-user:your-password@cluster.mongodb.net
MONGODB_DB_NAME=gacp_development

# For local MongoDB (alternative):
# MONGODB_URI=mongodb://localhost:27017/gacp_development

# -----------------------------------------------------
# CACHE - Redis
# -----------------------------------------------------
# Redis is OPTIONAL for development (falls back to in-memory)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------
# Base URL for API calls
API_BASE_URL=http://localhost:5000
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# API Version
API_VERSION=v2

# -----------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------
JWT_SECRET=your-development-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-session-secret-here

# -----------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------
# Disable mock data in development
ENABLE_MOCK_DATA=false

# Enable detailed logging
ENABLE_DEBUG_LOGGING=true

# Enable Swagger API docs
ENABLE_SWAGGER=true

# -----------------------------------------------------
# FILE STORAGE
# -----------------------------------------------------
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# -----------------------------------------------------
# EMAIL (Development - use Mailtrap or similar)
# -----------------------------------------------------
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass

# -----------------------------------------------------
# PAYMENT GATEWAY (Demo Mode)
# -----------------------------------------------------
PAYMENT_GATEWAY_MODE=demo
KSHER_APP_ID=demo
KSHER_PRIVATE_KEY=demo
