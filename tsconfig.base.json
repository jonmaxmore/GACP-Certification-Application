{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@gacp/ui": ["./packages/ui/src"],
      "@gacp/types": ["./packages/types/src"],
      "@gacp/config": ["./packages/config/src"],
      "@gacp/utils": ["./packages/utils/src"],
      "@gacp/constants": ["./packages/constants/src"]
    }
  },
  "exclude": ["node_modules"]
}
