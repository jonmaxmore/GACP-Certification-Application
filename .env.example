# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# ================================
# Database
# ================================
DATABASE_URL=mongodb://localhost:27017/gacp-platform
MONGODB_URI=mongodb://localhost:27017/gacp-platform
MONGODB_TEST_URI=mongodb://localhost:27017/gacp-platform-test
REDIS_URL=redis://localhost:6379

# ================================
# Authentication
# ================================
JWT_SECRET=your_jwt_secret_key_here_min_32_characters_long
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ================================
# Google Gemini AI (Phase 1)
# ================================
# Get API key: https://aistudio.google.com/apikey
# Using Gemini 2.5 Flash model via @google/genai SDK
GEMINI_API_KEY=AIzaSyAK4-JhjPuSX0Ghs7Mp5n0iv_E7eyhb4Eg

# ================================
# Google Calendar API (Phase 1)
# ================================
# OAuth 2.0 from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/calendar/oauth2callback

# ================================
# File Upload
# ================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ================================
# Frontend URLs
# ================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# Feature Flags
# ================================
ENABLE_AI_QC=true
ENABLE_GOOGLE_CALENDAR=true
ENABLE_QUEUE=true
ENABLE_SCHEDULER=true

# ================================
# Inspection Pricing (THB)
# ================================
VIDEO_INSPECTION_PRICE=500
HYBRID_INSPECTION_PRICE=1500
ONSITE_INSPECTION_PRICE=3000

# ================================
# Email/SMTP Configuration (Phase 1)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM="GACP DTAM <noreply@gacp-dtam.th>"

# ================================
# Job Scheduler (Phase 1)
# ================================
# Enable/disable scheduled jobs
ENABLE_SCHEDULER=true
# AI QC Queue processing interval (cron format: */5 * * * * = every 5 minutes)
AI_QC_QUEUE_INTERVAL=*/5 * * * *
# Certificate expiry check (cron format: 0 8 * * * = daily at 8 AM)
CERT_EXPIRY_CHECK_INTERVAL=0 8 * * *
# Inspection reminder (cron format: 0 7 * * * = daily at 7 AM)
INSPECTION_REMINDER_INTERVAL=0 7 * * *
