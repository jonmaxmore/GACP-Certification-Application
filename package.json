{
  "name": "gacp-platform",
  "version": "2.0.0",
  "private": true,
  "description": "GACP Platform - Backend API + Flutter Mobile App",
  "scripts": {
    "dev": "cd apps/backend && cross-env PORT=5000 node server.js",
    "start": "cd apps/backend && cross-env PORT=5000 node server.js",
    "test": "cd apps/backend && node node_modules/jest/bin/jest.js --config jest.config.cjs --forceExit",
    "lint": "cd apps/backend && npx eslint .",
    "format": "npx prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "pm2": "^6.0.13",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.js": "npx eslint --fix",
    "*.{json,md,yml,yaml}": "npx prettier --write"
  }
}
