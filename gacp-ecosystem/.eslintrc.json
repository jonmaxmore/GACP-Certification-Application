{
    "plugins": [
        "check-file"
    ],
    "rules": {
        "check-file/filename-naming-convention": [
            "error",
            {
                "**/*.{ts,tsx,js,jsx}": "KEBAB_CASE",
                "**/*.{css,scss,sass,less}": "KEBAB_CASE"
            },
            {
                "ignoreMiddleExtensions": true
            }
        ],
        "check-file/folder-naming-convention": [
            "error",
            {
                "apps/**/": "KEBAB_CASE",
                "backend/**/": "KEBAB_CASE",
                "packages/**/": "KEBAB_CASE"
            }
        ]
    }
}